                <TextBox x:Name="txtItem2Qty" TextWrapping="Wrap" Width="32" FontFamily="Arial Rounded MT Bold" FontSize="10" HorizontalAlignment="Left" Canvas.Left="164" Canvas.Top="96" VerticalAlignment="Top" Text="0"/>
                <TextBox x:Name="txtItem3Price" TextWrapping="Wrap" Width="42" FontFamily="Arial Rounded MT Bold" FontSize="10" HorizontalAlignment="Left" Canvas.Left="116" Canvas.Top="132" VerticalAlignment="Top" Text="0"/>
                <TextBox x:Name="txtItem3Qty" TextWrapping="Wrap" Width="32" FontFamily="Arial Rounded MT Bold" FontSize="10" HorizontalAlignment="Left" Canvas.Left="164" Canvas.Top="132" VerticalAlignment="Top" Text="0"/>

